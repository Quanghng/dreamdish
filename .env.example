# ============================================
# Configuration DreamDish - Variables d'environnement
# ============================================
# Copiez ce fichier en .env et remplissez les valeurs

# --------------------------------------------
# Configuration Mistral AI (REQUIS pour les prompts)
# --------------------------------------------
# Clé API Mistral - Obtenez-la sur https://console.mistral.ai/
MISTRAL_API_KEY=votre_clé_api_mistral_ici

# --------------------------------------------
# Configuration Hugging Face (REQUIS pour les images)
# --------------------------------------------
# Clé API Hugging Face (gratuite) - Obtenez-la sur https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=votre_clé_api_huggingface_ici

# --------------------------------------------
# Configuration Google AI (REQUIS pour Imagen 3)
# --------------------------------------------
# Clé API Google AI - Obtenez-la sur https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=votre_clé_api_google_ici

# --------------------------------------------
# Sélection des modèles (OPTIONNEL)
# --------------------------------------------
MISTRAL_MODEL_LARGE=mistral-large-latest
MISTRAL_MODEL_MEDIUM=mistral-medium-latest
MISTRAL_MODEL_SMALL=mistral-small-latest
MISTRAL_MODEL_MODERATION=mistral-small-latest

# --------------------------------------------
# Limitation de débit (OPTIONNEL)
# --------------------------------------------
MISTRAL_MAX_REQUESTS_PER_MINUTE=60
MISTRAL_MAX_TOKENS_PER_REQUEST=4096

# --------------------------------------------
# Fonctionnalités (OPTIONNEL)
# --------------------------------------------
ENABLE_MODERATION=true
ENABLE_SUGGESTIONS=true
ENABLE_IMAGE_GENERATION=true
LOG_AI_REQUESTS=false

# --------------------------------------------
# Configuration Application
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --------------------------------------------
# Configuration Base de Données (Docker)
# --------------------------------------------
# Ces valeurs sont utilisées par docker-compose pour PostgreSQL local
POSTGRES_USER=dreamdish
POSTGRES_PASSWORD=dreamdish_secret
POSTGRES_DB=dreamdish

# URL de connexion pour Prisma (Docker)
DATABASE_URL=postgresql://dreamdish:dreamdish_secret@db:5432/dreamdish?schema=public

# --------------------------------------------
# NextAuth Configuration
# --------------------------------------------
NEXTAUTH_URL=http://localhost:3000
# Générez avec: openssl rand -base64 32
NEXTAUTH_SECRET=générez_un_secret_aléatoire_ici
